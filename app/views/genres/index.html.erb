<div class="overlay">
<div class="overlay-message">
    <h1>LOADING...</h1>
</div>
</div>

<div class="container">
  <h1 class="genre-header">GENRES</h1>
  <div class="row">
    <div class="col s12 card-holder">
<% @genres.each do |name, img| %>
      <div class="card genre-card col s6">
